<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceGameMaui.MainPage"
             xmlns:vm="clr-namespace:DiceGameMaui.MVVM.ViewModel">

    <ContentPage.BindingContext>
        <vm:DiceGameViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Gra w kości - 2 Graczy" FontSize="24" HorizontalOptions="Center" />

            <!-- Gracz 1 -->
            <Label Text="Kości Gracza 1:" FontAttributes="Bold" />
            <CollectionView ItemsSource="{Binding Player1Dice}" SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5"
                               BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}">
                            <VerticalStackLayout>
                                <Label Text="{Binding Value}" FontSize="32" HorizontalOptions="Center"/>
                                <Button Text="Wybierz"
                                        Command="{Binding BindingContext.ToggleDiceCommand, Source={x:Reference Name=MainPage}}"
                                        CommandParameter="{Binding .}"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Gracz 2 -->
            <Label Text="Kości Gracza 2:" FontAttributes="Bold" />
            <CollectionView ItemsSource="{Binding Player2Dice}" SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5"
                               BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}">
                            <VerticalStackLayout>
                                <Label Text="{Binding Value}" FontSize="32" HorizontalOptions="Center"/>
                                <Button Text="Wybierz"
                                        Command="{Binding BindingContext.ToggleDiceCommand, Source={x:Reference Name=MainPage}}"
                                        CommandParameter="{Binding .}"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Przycisk Reroll i Restart -->
            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                <Button Text="Reroll" Command="{Binding RerollCommand}" IsEnabled="{Binding RerollUsed, Converter={StaticResource InverseBoolConverter}}"/>
                <Button Text="Restart" Command="{Binding RestartCommand}"/>
            </HorizontalStackLayout>

            <!-- Wyniki -->
            <Label Text="{Binding Result}" FontSize="18" HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
