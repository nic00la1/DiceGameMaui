<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DiceGameMaui.MainPage"
    xmlns:vm="clr-namespace:DiceGameMaui.MVVM.ViewModel"
    xmlns:converters="clr-namespace:DiceGameMaui.Converters">

    <ContentPage.BindingContext>
        <vm:DiceGameViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Gra w kości - 2 Graczy" FontSize="24" HorizontalOptions="Center" />

            <!-- Gracz 1 -->
            <Label Text="Kości Gracza 1:" FontAttributes="Bold" />
            <CollectionView x:Name="Player1CollectionView" ItemsSource="{Binding Player1Dice}" SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" 
                               BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ToggleCommand}" />
                            </Frame.GestureRecognizers>
                            <Image Source="{Binding ImageSource}" WidthRequest="50" HeightRequest="50" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Gracz 2 -->
            <Label Text="Kości Gracza 2:" FontAttributes="Bold" />
            <CollectionView x:Name="Player2CollectionView" ItemsSource="{Binding Player2Dice}" SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" 
                               BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ToggleCommand}" />
                            </Frame.GestureRecognizers>
                            <Image Source="{Binding ImageSource}" WidthRequest="50" HeightRequest="50" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Przycisk Reroll i Restart -->
            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                <Button Text="Reroll" Command="{Binding RerollCommand}" IsEnabled="{Binding RerollUsed, Converter={StaticResource InverseBoolConverter}}"/>
                <Button Text="Restart" Command="{Binding RestartCommand}"/>
            </HorizontalStackLayout>

            <!-- Wyniki -->
            <Label Text="{Binding Result}" FontSize="18" HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
